<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="C:\Users\Korisnik\source\repos\Animal22\logs\internal-nlog-AspNetCore.txt">
  
  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
  </extensions>

  <targets async="true">

    <!-- General file for all logs -->
    <target xsi:type="File" name="allfile" 
            fileName="C:\Users\ivozab\source\repos\Animal\logs\nlog-AspNetCore-all-${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${threadid} | ${message} ${exception:format=tostring}" />

    <!-- Info logs -->
    <target xsi:type="File" name="infoFile" 
            fileName="C:\Users\ivozab\source\repos\Animal\logs\nlog-AspNetCore-info-${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | url: ${aspnet-request-url} | action: ${aspnet-mvc-action} | ${message} ${exception:format=tostring}" />

    <!-- Warning logs -->
    <target xsi:type="File" name="warnFile" 
            fileName="C:\Users\ivozab\source\repos\Animal\logs\nlog-AspNetCore-warn-${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | url: ${aspnet-request-url} | action: ${aspnet-mvc-action} | ${message} ${exception:format=tostring}" />

    <!-- Error logs -->
    <target xsi:type="File" name="errorFile" 
            fileName="C:\Users\ivozab\source\repos\Animal\logs\nlog-AspNetCore-error-${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | url: ${aspnet-request-url} | action: ${aspnet-mvc-action} | ${message} ${exception:format=ToString,StackTrace}" />
    
  </targets>

  <rules>
    <!-- Capture everything to allfile -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- Info logs only from own app (exclude Microsoft) -->
    <logger name="*" minlevel="Info" maxlevel="Info" writeTo="infoFile" final="true" />

    <!-- Warnings -->
    <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="warnFile" final="true" />

    <!-- Errors -->
    <logger name="*" minlevel="Error" maxlevel="Error" writeTo="errorFile" final="true" />

    <!-- Ignore verbose Microsoft and System logs -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>
